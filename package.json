{
  "name": "electron-app-template",
  "version": "1.0.0",
  "description": "Electron app with Vite, React, Ant Design and hot reload",
  "main": "dist/app/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite --config vite.config.dev.js",
    "dev:electron": "wait-on tcp:5173 && cross-env NODE_ENV=development electron .",
    "build": "vite build",
    "build:electron": "vite build && electron-builder",
    "preview": "vite preview",
    "electron": "electron ."
  },
  "keywords": [
    "electron",
    "vite",
    "react",
    "antd"
  ],
  "author": "Dmitry Osin <d@osin.pro>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dmitry-osin/electron-app-template"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "vite": "^7.1.1",
    "vite-plugin-electron": "^0.15.5",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "antd": "^5.12.8",
    "electron-settings": "^4.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^6.1.6"
  }
}
